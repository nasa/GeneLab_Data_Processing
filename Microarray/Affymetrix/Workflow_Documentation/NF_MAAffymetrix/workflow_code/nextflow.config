includeConfig 'config/default.config' // default config for RNASeq RCP workflow
profiles {
    // Default slurm based run mode
    // Ideally, one would fine tune the slurm config to their cluster
    slurm {
        includeConfig 'config/executor/default_slurm.config'
    }

    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        // Address issue: https://github.com/nextflow-io/nextflow/issues/1210
        process {
          errorStrategy = { 
            task.exitStatus == 255 ? 'retry' : 'terminate' 
            }
        }
        includeConfig 'config/software/by_docker_image.config'
    }

    docker {
        singularity.enabled    = false
        docker.enabled         = true
        docker.runOptions      = '-u $(id -u):$(id -g)'
        docker.userEmulation   = true
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        process {
          errorStrategy = { 
            [125,127].contains(task.exitStatus) ? 'retry' : 'terminate' 
            }
        }
        includeConfig 'config/software/by_docker_image.config'
    }
}

manifest {
    homePage = 'https://github.com/nasa/GeneLab_Data_Processing/tree/master/Microarray/Affymetrix'
    description = 'Affymetrix Microarray Workflow for Document GL-DPPD-7114-A'
    mainScript = 'main.nf'
    defaultBranch = 'main'
    nextflowVersion = '>=24.10.5'
    version = '1.0.5'
}

// Section related to resource usage
// Specifically, this section defines the output directory for the resource usage files
def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')
timeline {
    enabled = true
    file    = "${params.resultsDir}/Resource_Usage/execution_timeline_${trace_timestamp}.html"
}
report {
    enabled = true
    file    = "${params.resultsDir}/Resource_Usage/execution_report_${trace_timestamp}.html"
}
trace {
    enabled = true
    file    = "${params.resultsDir}/Resource_Usage/execution_trace_${trace_timestamp}.txt"
}
dag {
    enabled = false // TODO: DISCUSS, setting up nextflow env with graphviz to output the svg diagram
    file    = "${params.resultsDir}/Resource_Usage/pipeline_dag_${trace_timestamp}.svg"
}
