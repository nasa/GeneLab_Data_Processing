/*
----------------------------------------------------------------------------------------
    GeneLab Data Processing RNA-Seq Workflow Nextflow config file
----------------------------------------------------------------------------------------
    Config file for local executor
----------------------------------------------------------------------------------------
*/

process {

    executor='local' 
    cpus   = { 2      * task.attempt } // Default
    memory = { 2.GB   * task.attempt } // Default

    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // https://www.nextflow.io/docs/latest/config.html#config-process-selectors
    withName:'GET_ACCESSIONS|FETCH_ISA|ISA_TO_RUNSHEET|PARSE_ANNOTATIONS_TABLE|COPY_READS|DOWNLOAD_REFERENCES|DOWNLOAD_ERCC|CONCAT_ERCC|GTF_TO_PRED|PRED_TO_BED|GET_MAX_READ_LENGTH|INFER_EXPERIMENT|ASSESS_STRANDEDNESS|QUANTIFY_STAR_GENES|EXTRACT_RRNA|REMOVE_RRNA|QUANTIFY_RSEM_GENES|ADD_GENE_ANNOTATIONS|ADD_GENE_ANNOTATIONS_RRNA_RM|RAW_READS_MULTIQC|TRIMMED_READS_MULTIQC|ALIGN_MULTIQC|INFER_EXPERIMENT_MULTIQC|GENEBODY_COVERAGE_MULTIQC|INNER_DISTANCE_MULTIQC|READ_DISTRIBUTION_MULTIQC|COUNT_MULTIQC|ALL_MULTIQC|PARSE_QC_METRICS|VV_RAW_READS|VV_TRIMMED_READS|VV_STAR_ALIGNMENT|VV_RSEQC|VV_RSEM_COUNTS|VV_DGE_DESEQ2|VV_CONCAT_FILTER|SOFTWARE_VERSIONS|GENERATE_PROTOCOL' {
        cpus   = { 1    * task.attempt }
        memory = { 2.GB * task.attempt }
    }
    withName:READ_DISTRIBUTION {
        cpus   = { 1    * task.attempt }
        memory = { 2.GB * task.attempt }
    }
    withName:GENERATE_MD5SUMS {
        cpus   = { 1    * task.attempt }
        memory = { 8.GB * task.attempt }
    }
    withName:GENEBODY_COVERAGE {
        cpus   = { 2    * task.attempt }
        memory = { 2.GB * task.attempt }
    }
    withName:'RAW_FASTQC|TRIMMED_FASTQC' {
        cpus   = { 2     * task.attempt } 
        memory = { 4.GB  * task.attempt }
    }
    withName:INNER_DISTANCE {
        cpus   = { 2    * task.attempt  }
        memory = { 8.GB * task.attempt  }
    }
    withName:'SORT_AND_INDEX_BAM|DGE_DESEQ2|DGE_DESEQ2_RRNA_RM' {
        // DGE To do: Test resource usage w/ Wald parallelization enabled
        cpus   = { 4     * task.attempt }
        memory = { 16.GB * task.attempt }
    }
    withName:TRIMGALORE {
        // https://github.com/FelixKrueger/TrimGalore/blob/master/Docs/Trim_Galore_User_Guide.md
        cpus   = { 8    * task.attempt  }  
        memory = { 2.GB                 }
    }
    withName:COUNT_ALIGNED {
        cpus   = { 8                    }
        memory = { 8.GB * task.attempt  }
        errorStrategy = 'retry'
        maxRetries = 4
    }
    withName:ALIGN_STAR {
        cpus   = { 8                    }
        memory = { 40.GB * task.attempt }
        errorStrategy = 'retry'
        maxRetries = 3
    }
    withName:'BUILD_STAR_INDEX|BUILD_RSEM_INDEX' {
        cpus   = { 16    * task.attempt }
        memory = { 60.GB * task.attempt }
    }
// rnaseq_microbes specific
    withName:'VV_BOWTIE2_ALIGNMENT|VV_FEATURECOUNTS|QUANTIFY_FEATURECOUNTS_GENES|REMOVE_RRNA_FEATURECOUNTS' {
        cpus   = { 1                    }
        memory = { 1.GB                 }
    }
    withName:GET_GTF_FEATURES {
        cpus   = { 1                    }
        memory = { 2.GB                 }
    }
    withName:BUILD_BOWTIE2_INDEX {
        cpus   = { 8     * task.attempt }
        memory = { 32.GB * task.attempt }
    }
    withName:ALIGN_BOWTIE2 {
        cpus   = { 4                    }
        memory = { 16.GB * task.attempt }
    }
    withName:FEATURECOUNTS {
        cpus   = { 8     * task.attempt }
        memory = { 16.GB  * task.attempt }
    }
//    Unused
//    withName:'QUALIMAP_BAM_QC|QUALIMAP_RNASEQ_QC' {
//        cpus   = { 8     * task.attempt }
//        memory = { 8.GB * task.attempt  }
//    }
//    withName:SAMTOOLS_STATS {
//        cpus   = { 1     * task.attempt }
//        memory = { 6.GB  * task.attempt }
//    }
}

executor { // entire executor scope parameters. I.E. parameters that define how an entire executor should operate
    // Refers to jobs launched via the slurm executor 
    $local {
        queueSize = 12
    }
}